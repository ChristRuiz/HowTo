<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AsignarPerfil"
    android:background="@color/fondo"
    android:id="@+id/relative">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/foto_perfil"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/user"
        android:layout_margin="60dp"
        android:layout_centerHorizontal="true"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/white"/>

    <TextView
        android:id="@+id/lbl_nombre_completo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/foto_perfil"
        android:fontFamily="@font/text_regular"
        android:textColor="@color/white"
        android:layout_marginLeft="35dp"
        android:text="Nombre Completo" />

    <EditText
        android:id="@+id/nombre_completo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="18"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        android:hint="Ej: Adrian SÃ¡nchez Ramirez"
        android:fontFamily="@font/text_regular"
        android:textColorHint="@color/colorAccent"
        android:layout_below="@id/lbl_nombre_completo"
        android:drawableLeft="@drawable/ic_person_white_24dp"
        android:padding="10dp"
        android:background="@drawable/login_register_edittext"
        android:drawablePadding="10dp"
        android:inputType="text"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/lbl_nombre_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombre_completo"
        android:fontFamily="@font/text_regular"
        android:textColor="@color/white"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="40dp"
        android:text="Nombre de Usuario" />

    <EditText
        android:id="@+id/nombre_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="18"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        android:hint="Adrian_Sanchez"
        android:fontFamily="@font/text_regular"
        android:textColorHint="@color/colorAccent"
        android:layout_below="@id/lbl_nombre_usuario"
        android:drawableLeft="@drawable/ic_arroba"
        android:drawableTint="@color/white"
        android:padding="10dp"
        android:background="@drawable/login_register_edittext"
        android:drawablePadding="10dp"
        android:inputType="text"
        android:maxLines="1"/>

    <Button
        android:id="@+id/cancelar"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:layout_marginTop="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_below="@id/nombre_usuario"
        android:background="@drawable/button_social_media"
        android:textColor="#fff"
        android:fontFamily="@font/title_bold"/>

    <Button
        android:id="@+id/aceptar"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        android:layout_below="@id/nombre_usuario"
        android:layout_marginTop="60dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:background="@drawable/button"
        android:textColor="#fff"
        android:fontFamily="@font/title_bold" />
</RelativeLayout>